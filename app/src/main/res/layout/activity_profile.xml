<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/raleway"
        android:text="Profile"
        android:textColor="#353434"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="367dp"
        android:layout_height="571dp"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_49374" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="User name"
            android:gravity="center"
            android:textSize="25dp"
            android:fontFamily="@font/raleway"
            android:textColor="#353434"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_black_back_closed_envelope_shape" />

            <TextView
                android:id="@+id/email"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/raleway"
                android:gravity="center"
                android:text="Email"
                android:textColor="#353434"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="101dp"
                android:layout_marginLeft="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_maps_and_flags" />

            <TextView
                android:id="@+id/Localisation"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/raleway"
                android:gravity="center"
                android:text="Localisation"
                android:textColor="#353434"
                android:textSize="15dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/raleway"
                android:text="Information Data Base "
                android:textColor="#353434"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/information"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/raleway"
                android:gravity="center"
                android:text="Localisation"
                android:textColor="#353434"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/btnArt"
                android:layout_width="160dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/round1"
                android:fontFamily="@font/raleway"
                android:text="Articles"
                android:textColor="#FFFFFF"
                android:textColorLink="#00706C6C" />
            <Button
                android:id="@+id/btnStat"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/round1"
                android:fontFamily="@font/raleway"
                android:text="Statistiques"
                android:textColor="#FFFFFF"
                android:textColorLink="#00706C6C" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

