<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="571dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:text="Email Verification"
            android:textColor="#353434"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/raleway"
            android:text="We sent you an email contain a verification code
write it down below to continue"
            android:textColor="#353434"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/verif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#9599E2"
            android:ems="10"
            android:fontFamily="@font/raleway"
            android:hint="Write the code here"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/validBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="132dp"
            android:background="@drawable/round1"
            android:fontFamily="@font/raleway"
            android:text="Confirme"
            android:textColor="#FFFFFF"
            android:textColorLink="#00706C6C" />

        <ImageView
            android:id="@+id/imgVerf"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            />
    </LinearLayout>
</LinearLayout>